            placeholder="Type your answer here" 
            style="display:none;"
        >
        
        <div>
            <button id="generateBtn" class="btn">Generate Riddle</button>
            <button id="submitBtn" class="btn" style="display:none;">Submit Answer</button>
        </div>

        <div id="resultMessage"></div>
        
